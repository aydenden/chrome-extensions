{
  "name": "@chrome-ext/ai-company-analyzer",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite build --watch --mode development",
    "build": "vite build && bun run build:content",
    "build:content": "esbuild src/content/index.ts --bundle --outfile=dist/content.js --format=iife --target=es2020",
    "preview": "vite preview",
    "generate:fixtures": "bun run e2e/fixtures/generator/generate.ts",
    "test:e2e": "bun run generate:fixtures && playwright test",
    "test:e2e:ui": "bun run generate:fixtures && playwright test --ui"
  },
  "dependencies": {
    "@huggingface/transformers": "^3.8.1",
    "canvg": "^4.0.3",
    "dexie": "^4.0.10",
    "dexie-react-hooks": "^1.1.7",
    "lindera-wasm-ko-dic": "^1.2.0",
    "pdfjs-dist": "^5.4.449",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/chrome": "^0.0.287",
    "@types/react": "^18.3.16",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "typescript": "^5.6.3",
    "vite": "^5.4.11"
  }
}
